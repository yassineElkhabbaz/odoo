<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>


        <record id="res_company_form_fields" model="ir.ui.view">
            <field name="name">res.company.form.fields.admin</field>
            <field name="model">res.company</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <data>

                <field name="phone" position="after">
                    <field name="fax" string="FAX"/>
                </field>
                <field name="vat" position="after">
                    <field name="tp" string="TP"/>
                    <field name="ice" string="ICE"/>
                    <field name="cnss" string="CNSS"/>
                </field>
                </data>
            </field>
        </record>

    </data>
</odoo>
